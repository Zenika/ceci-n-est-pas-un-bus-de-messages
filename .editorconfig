root = true

# We recommend you to keep these unchanged

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.adoc]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.java]
indent_style = tab
tab_width = 4

[*.xml]
indent_style = tab
indent_size = 1
tab_width = 4
